<!-- form handling -->
<form action="/api/students" method="POST" id="add_student">
    <div class="new_student">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="Status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Not Complete" >
                <label for="radio-4" class="radio-label">Not Complete</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="In Progress" >
                <label for="radio-5" class="radio-label">In Progress</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="status" value="Completed" >
                <label for="radio-6" class="radio-label">Completed</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>